---
import Layout from "src/layouts/Layout.astro";
import { Image } from "astro:assets";

import ServiceDetail from "@components/ServiceDetail.astro";
import ServiceHero, {
  type ServiceFeature,
} from "@components/ServiceHero.astro";

import Shield from "@components/Icons/Shield.svg";
import FileMedal from "@components/Icons/FileMedal.svg";
import FileMedalPen from "@components/Icons/FileMedalPen.svg";
import Calendar from "@components/Icons/Calendar.svg";
import HandShake from "@components/Icons/HandShake.svg";
import ConvoMsg from "@components/Icons/ConvoMsg.svg";
import FileBlank from "@components/Icons/FileBlank.svg";
import StoreBell from "@components/Icons/StoreBell.svg";
import ServiceCard from "@components/ServiceCard.astro";

import licensing1 from "@assets/images/services/licensing-1.png";
import licensing2 from "@assets/images/services/licensing-2.png";
import licensing3 from "@assets/images/services/licensing-3.png";

import heroBg from "@assets/images/bg/hero-bg.png";
import ApplicationLogosCarousel from "@components/ApplicationLogosCarousel.astro";

const title = "Life Insurance Licensing Coordinator";
const description = `
Your go-to support for agent licensing, contracting, and onboarding. A Life Insurance Licensing Coordinator helps insurance agents and agency owners stay organized, compliant, and ready to sell — managing the licensing process from start to finish so you can focus on building your business and serving clients.
`;

const serviceFeature: ServiceFeature = {
  title,
  description,
  features: [
    {
      Icon: FileMedal,
      description: "Agent licensing applications and renewals",
    },
    {
      Icon: ConvoMsg,
      description: "Communication with carriers and state departments",
    },
    {
      Icon: FileMedalPen,
      description: "Carrier contracting and appointment management",
    },
    {
      Icon: Calendar,
      description: "License and compliance calendar management",
    },
    {
      Icon: HandShake,
      description: "Agent onboarding and status tracking",
    },
    {
      Icon: FileBlank,
      description: "Document filing and CRM updates",
    },
  ],
};
---

<Layout preloadedImage={[heroBg, licensing1, licensing2, licensing3]}>
  <ServiceHero serviceFeature={serviceFeature} />

  <ServiceDetail
    title="You help clients protect their future. We’ll handle your licensing."
  >
    <div
      class:list={[
        "md:grid-rows-[auto auto] grid w-full grid-cols-[315px] place-content-center gap-5 sm:grid-cols-[450px]",
        "md:grid-cols-2 md:justify-items-center lg:grid-cols-[auto_auto] lg:grid-rows-2 lg:gap-x-24 lg:gap-y-11",
      ]}
    >
      <!-- max-w-136  -->
      <ServiceCard
        class="service-1 w-full max-w-112.5 px-5 md:col-span-2 lg:row-start-1 lg:row-end-3 lg:max-w-136"
      >
        <Fragment slot="title">
          Stay compliant and ready to
          <br class="hidden lg:inline" />
          sell
        </Fragment>
        <Fragment slot="content">
          <!-- 239 338 -->
          <div
            class="grid aspect-square place-content-center rounded-full border border-border p-5"
          >
            <Image
              src={licensing1}
              class={"lg:w-full lg:size-59.75 lg:aspect-square lg:object-contain"}
              alt={"license img 1"}
            />
          </div>
          <!-- <div class="w-[300px]">
            <Social1 />
          </div> -->
        </Fragment>
      </ServiceCard>

      <ServiceCard
        class="w-full px-5 lg:row-start-1 lg:row-end-2 lg:max-w-148 xl:px-10 2xl:px-15"
        id="app-service"
      >
        <Fragment slot="title">
          Schedule and publish daily posts
          <br class="hidden lg:inline" />
          that match your brand voice
        </Fragment>
        <Fragment slot="content">
          <!-- <Social2 /> -->
          <div
            class="grid size-37.5 place-content-center rounded-full border border-border"
          >
            <Image src={licensing2} class={"size-25"} alt={"license img 2"} />
          </div>
        </Fragment>
      </ServiceCard>

      <ServiceCard
        class="w-full px-5 lg:max-w-148 xl:px-10 2xl:px-15"
        id="checkbox-service"
      >
        <Fragment slot="title">
          Reply to comments and engage
          <br class="hidden lg:inline" />
          with your audience
        </Fragment>
        <Fragment slot="content">
          <div
            class="grid size-37.5 place-content-center rounded-full border border-border"
          >
            <Image src={licensing3} class={"size-28"} alt={"license img 3"} />
          </div>
        </Fragment>
      </ServiceCard>
    </div>
  </ServiceDetail>

  <ApplicationLogosCarousel />
</Layout>

<style>
  @media (width >= 64rem) {
    .service-1 {
      width: 34rem;
    }
    .service-1 img {
      width: 18.75rem;
    }
  }
</style>
